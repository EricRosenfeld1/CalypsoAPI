<Window x:Class="CalypsoAPI.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalypsoAPI.UI" 
        xmlns:viewmodels="clr-namespace:CalypsoAPI.UI.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="CalypsoAPI UI" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Calypso.State.LatestMeasurementResults.Measurements, UpdateSourceTrigger=PropertyChanged}" CanUserSortColumns="True"
                           ScrollViewer.CanContentScroll="True" CanUserAddRows="False" SelectedIndex="0" EnableColumnVirtualization="True" IsReadOnly="True" SelectionMode="Single" VerticalAlignment="Top" Margin="0 30 0 0" Height="300"/>

        <Label Content="{Binding Calypso.State.Status, UpdateSourceTrigger=PropertyChanged}"/>

        <Button Content="Start" Command="{Binding StartCalypsoAsyncCommand}" Width="100" Height="50" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10 0 0 10"/>
        <Button Content="Stop" Command="{Binding StopCalypsoAsyncCommand}" Width="100" Height="50" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="120 0 0 10"/>


    </Grid>
</Window>
